<!DOCTYPE html>
@{
    ViewBag.Title = "Index";
    var u = (string)Session["user"];
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="generator" content="Bootply" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/css/price-range.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    @*<link href="~/css/bootstrap.min.css" rel="stylesheet" />*@

    
</head>
<body>
    
    <div class="navbar-wrapper">
        <!-- nav-bar start-->
        <div class="container">
            <div class="navbar navbar-inverse navbar-static-top">

                <div class="navbar-header">
                    <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="navbar-brand" href="#">MyShop </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/Shop/Index">Home</a></li>
                        <li><a href="/Shop/Products" target="ext">Products</a></li>
                        <li><a href="/Shop/LogIn">Register</a></li>
                    </ul>
                </div>

            </div>
        </div><!-- /container -->
    </div><!-- /navbar wrapper -->




    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    @if (u != null)
                    {
                        <p>hi @u !</p>
                    }
                </div>
                <div class="col-sm-8">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                            @if (u == null)
                            {
                                <li><a href="/Shop/LogIn"><i class="glyphicon glyphicon-user"></i> LogIn</a></li>
                            }
                            <li><a href="/Shop/checkout"><i class="glyphicon glyphicon-usd"></i> Checkout</a></li>
                            <li><a href="/Shop/AddToCart" class="active"><i class="glyphicon glyphicon-shopping-cart"></i> Cart</a></li>
                            @if (u != null) { 
                                <li>
                                    @using (Html.BeginForm("Logout", "Shop"))
                                    {
                                        <input type="submit" value="Logout" class="btn btn-default btn-sm">
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-middle-->



    
    @RenderBody() 


    <footer>
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">Copyright © 2015 MyShop Inc. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>        
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
